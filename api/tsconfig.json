{
	"type": "module",
	"compilerOptions": {
		"target": "es2022",
		"rootDir": "./src",
		"outDir": "./dist",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,

		"module": "es2022",
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"#*": ["./src/*"]
		}
	}
}
